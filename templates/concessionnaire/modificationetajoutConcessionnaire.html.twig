{% extends 'base.html.twig' %}

{% block title %}Modification du concessionnaire{% endblock %}
{% block PageTitle %}
{% if isModification %}
Modification du concessionnaire {{concessionnaires.concessionnairemarchand.utilisateur.nom}}
{% else %}
Ajout d'un concessionnaire
{% endif %}
{% endblock %}
{% block body %}

<!--begin::Col-->
									<div class="card mb-5 mb-xxl-8">
										{{ form_start(form) }}
											{{ form_row(form.concessionnairemarchand.actif)}}
											{{ form_row(form.concessionnairemarchand.utilisateur.nom)}}
											
											
									   {{ form_row(form.concessionnairemarchand.description) }}
									   {{ form_row(form.concessionnairemarchand.utilisateur.courriel) }}
									   {{ form_row(form.concessionnairemarchand.utilisateur.telephone, {"label":"Téléphone"}) }}
									   {{ form_row(form.concessionnairemarchand.utilisateur.nomutilisateur, {"label":"Nom d'utilisateur"}) }}
									   {{ form_row(form.concessionnairemarchand.utilisateur.password, {"label":"Mot de passe"}) }}
                                       {{ form_row(form.concessionnairemarchand.siteweb)}}
											
										{{ form_row(form.concessionnairemarchand.vendeurs)}}
										{{ form_row(form.concessionnairemarchand.agents)}}
										
										{{ form_row(form.concessionnairemarchand.liendealertrack, {"label":"Lien dealer track"}) }}
 											
                                        {{ form_row(form.concessionnairemarchand.media)}}
											<div class="row padding-1">
											{%for fabNom in form.concessionnairemarchand.fabriquants %}
												<div class="img_checkbox col-lg-4  col-sm-4">
											
												{{form_row(fabNom)}}{#pour rendre le input  checkbox#}
												
												{# Ici pour chaque choix on recupere l'id puis on avec l'id on recupere le liens du logo #}
												{# #}
													<img src="{{asset(listeLogo[fabNom.vars.name])}}" />{# pour connaitre les variables disponible#}
													
												</div>
											{%endfor%}

											</div>					
											
 										<input type="submit" class="btn btn-primary" value="Appliquer">
									
										{{form_end(form)}}

											</div>
									<!--end::Col-->

{% endblock %}
